<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".news_list"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <include
        layout="@layout/simple_bar"
        android:id="@+id/simple_bar_tit"/>
    <ScrollView
        android:layout_below="@id/simple_bar_tit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_news_detail"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:id="@+id/rl_news_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="12"
                android:layout_marginBottom="5dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@drawable/line2"
                    android:layout_weight="4"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nov 14, 2018"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:background="@color/white"
                    android:layout_weight="4"
                    android:textSize="10sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@drawable/line2"
                    android:layout_weight="4"/>
            </LinearLayout>
            <ImageView
                android:layout_below="@+id/rl_news_date"
                android:id="@+id/iv_news_img"
                android:layout_width="wrap_content"
                android:layout_height="190dp"
                android:scaleType="centerCrop"
                android:src="@drawable/car1" />
            <TextView
                android:id="@+id/tv_news_tit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_news_img"
                android:text="HÃNG XE BMW TRÌNH LÀNG DÒNG XE MỚI"
                android:paddingStart="11dp"
                android:paddingEnd="11dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/orange"/>
            <TextView
                android:id="@+id/tv_news_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_news_tit"
                android:text="Author: Thanh Quang"
                android:paddingStart="11dp"
                android:textColor="@color/grey"
                android:textSize="11sp"/>
            <TextView
                android:id="@+id/tv_news_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="11dp"
                android:paddingEnd="11dp"
                android:layout_below="@+id/tv_news_author"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum. Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."/>
            <LinearLayout
                android:id="@+id/ll_relate_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/tv_news_content"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:id="@+id/ll_relate_news_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="@drawable/line3"
                        android:layout_weight="5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tin liên quan"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:background="@drawable/btn1"
                        android:layout_weight="4"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:paddingBottom="5dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:paddingTop="5dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="@drawable/line3"
                        android:layout_weight="3"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_relate_news_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="12"
                    android:layout_marginTop="15dp">
                    <RelativeLayout
                        android:id="@+id/rl_relate_news_detail"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="4"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp">
                        <ImageView
                            android:id="@+id/iv_relate_news_img"
                            android:layout_width="wrap_content"
                            android:layout_height="90dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/car1" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@color/dark_trans"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/tv_news_head"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/featured_head"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_relate_news_detail2"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="4"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp">
                        <ImageView
                            android:id="@+id/iv_relate_news_img2"
                            android:layout_width="wrap_content"
                            android:layout_height="90dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/car1" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@color/dark_trans"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/tv_news_head2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/featured_head"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_relate_news_detail3"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="4"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp">
                        <ImageView
                            android:id="@+id/iv_relate_news_img3"
                            android:layout_width="wrap_content"
                            android:layout_height="90dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/car1" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@color/dark_trans"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/tv_news_head3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/featured_head"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>